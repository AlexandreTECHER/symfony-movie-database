<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="{{ asset('css/journal.min.css') }}">
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<a class="navbar-brand" href="{{ path('main') }}">MovieDB</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarColor01">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item active">
						<a class="nav-link" href="{{ path('main') }}">Home
							<span class="sr-only">(current)</span>
						</a>
					</li>
				</ul>
				<ul class="navbar-nav">
                    {% if app.user %}
                        <li class="navbar-text mr-3">
                            Bonjour {{ app.user.email }} !
                        </li>
                    {% endif %}
					<li class="nav-item">
                        {# app.user fournit l'utilisateur connecté, lorsqu'il n'est pas connecté ça retourne null #}
                        {# on peut donc tester app.user dans un if, s'il vaut null c'est un équivalent de false #}
                        {% if app.user %}
						    <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                        {% else %}
						    <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                        {% endif %}
					</li>
				</ul>
			</div>
		</nav>
		{% block body %}{% endblock %}
		{% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        {% endblock %}
	</body>
</html>
