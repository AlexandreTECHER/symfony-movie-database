{% extends "admin/base.html.twig" %}


{% block body %}
	<div class="container">
		<div class="row">


			<div class="card mb-3">
				<h3 class="card-header">{{ job.name }}</h3>
				<div class="card-body">
					<p>Département :
						{{ job.department.name|default('Pas de département associé') }}</p>
					<p>Date de création :
						{{ job.createdAt|date('Y-m-d H:i:s') }}</p>
					<p>Date de mise à jour :
						{{ job.updatedAt is not null ? job.updatedAt|date('Y-m-d H:i:s')  }}</p>
				</div>


				<div class="card-footer text-muted">
					<a href="{{ path('admin_job_browse') }}">Retour à la liste</a>
				</div>
			</div>

		</div>
	</div>

{% endblock %}
