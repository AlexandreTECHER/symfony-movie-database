{% extends "admin/base.html.twig" %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="card mb-3">
            <h3 class="card-header">{{ movie.title }} </h3>
            <div class="card-body">
                <p>Date de création : {{ movie.createdAt|date('Y-m-d H:i:s') }} </p>
                <p>Date de mise à jour : {{ movie.updatedAt is not null ? movie.updatedAt|date('Y-m-d H:i:s') }}</p>
                <ul>
                {% for genre in movie.genres %}
                    <li>{{ genre.name }}</li>
                {% endfor %}
                </ul>
            </div>
            <div class="card-footer text-muted">
               <a href="{{ path('admin_movie_browse') }}">Retour à la liste</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}
